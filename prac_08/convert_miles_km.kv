BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            on_text: app.validate_input()
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1.0)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1.0)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.convert_miles_to_km()
    Label:
        text: app.result